/**
 * Implementation of hook_cloud_zoom_preset_info().
 */
function cloud_zoom_cloud_zoom_preset_info() {
  return array(
    'default' => array('locked' => TRUE, 'settings' => array(), 'view_preset' => 'cloud_zoom_small', 'zoom_preset' => 'cloud_zoom_large'),
  );
}


/**
 * Function to pull out the cloud zoom settings
 */
function cloud_zoom_get_settings($reset = TRUE) {
  static $settings = NULL;

  if ($reset) {
    $settings = NULL;
  }

  if (!isset($settings)) {
    $settings = variable_get('cloud_zoom_settings', array());
    $settings += module_invoke_all('cloud_zoom_preset_info');
  }

  return $settings;
}
